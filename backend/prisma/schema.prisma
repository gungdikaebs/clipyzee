generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id           String   @id @default(uuid())
  originalName String
  fileName     String
  path         String // Local path for MVP
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  jobs         Job[]
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Job {
  id        String    @id @default(uuid())
  videoId   String
  video     Video     @relation(fields: [videoId], references: [id])
  status    JobStatus @default(PENDING)
  result    Json? // Store processing result (e.g., clip paths)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
